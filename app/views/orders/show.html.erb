<p>
  <strong>Paid:</strong>
  <%= @order.paid %>
</p>

<p>
  <strong>User:</strong>
  <%= @order.user.user_name %>
</p>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
    </tr>
  </thead>

  <tbody>
    <% @order.line_items.each do |item| %>
      <tr>
        <td><%= item.product.product_name %></td>
        <td><%= item.quantity %></td>
        <td><%= link_to "+1", line_item_add_path(item), method: :post %></td>
        <td><%= link_to "-1", line_item_subtract_path(item), method: :post %></td>
        <td><%= link_to "Delete", line_item_path(item), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back', orders_path %>
