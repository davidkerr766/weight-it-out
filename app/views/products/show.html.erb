<div>
        <%= image_tag @product.picture, width: 400 if @product.picture.attached? %>
        <p><strong>Product: </strong><%= @product.product_name %></p>
        <p><strong>Category: </strong><%= @product.category.name %></p>
        <p><strong>Description: </strong><%= @product.description %></p>
        <p><strong>Price per month: </strong><%= number_to_currency(@product.price) %></p>
        <p><strong>Available: </strong><%= @product.quantity %></p>
        <p><strong>Provided By: </strong><%= @product.user.user_name %></p>
        <% if user_signed_in? && (current_user.has_role? :admin or current_user.products.include?(@product)) %>
          <%= link_to 'Edit', edit_product_path(@product) %>
          <%= link_to 'Destroy', @product, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        <%= link_to "Rent Now", line_items_path(:product_id => @product.id), method: :post %>
        <%= link_to 'Back', products_path %>
      </div>



