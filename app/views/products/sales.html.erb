<h1>Sales</h1>
<h3>Total Revenue <%= number_to_currency(@revenue) %></h2>
<table>
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Description</th>
      <th>Category</th>
      <th>Price</th>
      <th>In Stock</th>
      <th>Rented</th>
      <th>Revenue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.description %></td>
        <td><%= product.category.name %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= product.quantity %></td>
        <td><%= product.total_rented %></td>
        <td><%= number_to_currency(product.total_rented * product.price) %></td>
        <td><%= link_to "edit", edit_product_path(product) %></td>
        <td><%= link_to "delete", product_path(product), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>