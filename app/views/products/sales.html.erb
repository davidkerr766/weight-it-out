<h1>Sales</h1>
<%= bar_chart @sales_category, xtitle: "Revenue($)" %>
<div class="ui statistic">
<div class="value"><%= number_to_currency(@revenue) %></div>
<div class="label">Total Revenue</div>
</div>
<table class="ui table">
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Description</th>
      <th>Category</th>
      <th>Price</th>
      <th>In Stock</th>
      <th>Rented</th>
      <th>Revenue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.description %></td>
        <td><%= product.category.name %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= product.quantity %></td>
        <td><%= product.total_rented %></td>
        <td><%= number_to_currency(product.revenue) %></td>
        <td><%= link_to "edit", edit_product_path(product) %></td>
        <td><%= link_to "delete", product_path(product), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>