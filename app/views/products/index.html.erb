<h1>Weight It Out</h1>
<h3>Products Available to Rent</h3>

<table>
  <thead>
    <tr>
      <th>Product name</th>
      <th>Description</th>
      <th>Price per month</th>
      <th>Available</th>
      <th>Category</th>
      <th>Provided By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.description %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= product.quantity %></td>
        <td><%= product.category.name %></td>
        <td><%= product.user.user_name %></td>
        <td><%= link_to 'Details', product %></td>
        <% if user_signed_in? && (current_user.has_role? :admin or current_user.products.include?(product)) %>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <td><%= link_to "Rent Now", line_items_path(:product_id => product.id), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'List gym equipment to rent', new_product_path if user_signed_in? %>
